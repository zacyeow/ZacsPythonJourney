# Function to pick a random date night idea based on cost
def random_date_night(ideas, cost):
    filtered_ideas = [idea for idea in ideas if idea["cost"] == cost]
    if filtered_ideas:
        idea = random.choice(filtered_ideas)
        return f"Idea: {idea['idea']}\nCategory: {idea['category']}\nCost: {idea['cost']}"
    else:
        return "No date night ideas found for the selected cost."

# Choose the cost ($, $$, $$$)
selected_cost = "$"  # Change this to your desired cost

# Print a random date night idea based on the selected cost
print(random_date_night(date_night_ideas, selected_cost))
